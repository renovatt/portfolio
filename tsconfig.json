{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
    "paths": {
      "@atoms/*": ["components/@globals/atoms/*"],
      "@molecules/*": ["components/@globals/molecules/*"],
      "@organisms/*": ["components/@globals/organisms/*"],
      "@templates/*": ["components/@globals/templates/*"],
      "@features/*": ["components/features/*"],
      "@components/*": ["components/*"],
      "@providers/*": ["providers/*"],
      "@entities/*": ["entities/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@schemas/*": ["schemas/*"],
      "@stores/*": ["stores/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "~static/*": ["static/*"],
      "~types/*": ["@types/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
