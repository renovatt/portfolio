{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
    "paths": {
      "@elements/*": ["components/elements/*", "../elements/"],
      "@modules/*": ["components/modules/*"],
      "@helpers/*": ["components/helpers/*", "../helpers/"],
      "@models/*": ["components/models/*"],
      "@providers/*": ["components/providers/*"],
      "@hooks/*": ["hooks/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      // "@schemas/*": ["schemas/*"],
      // "@store/*": ["store/*"],
      // "@services/*": ["services/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
